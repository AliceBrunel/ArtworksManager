<!DOCTYPE html>
<html>
  <head>
    <title>ArtworksManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

	  <!--NAV BAR-->
	  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
	  <a class="navbar-brand" href="/">Artworks Manager</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	  </button>

	  <div class="collapse navbar-collapse" id="navbarColor01">
		<ul class="navbar-nav mr-auto">
		  <li class="nav-item active">
			<a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
		  </li>
		  <li class="nav-item">
			<%= link_to "Artworks", artworks_path, class: "nav-link" %>
		  </li>
		  <li class="nav-item">
			<%= link_to "Artists", artists_path, class: "nav-link" %>
		  </li>
		  <li class="nav-item">
			<%= link_to "Museums", museums_path, class: "nav-link" %>
		  </li>
		</ul>
		<% if current_user %>
		<%= button_to "My profil", user_path(current_user.id), method: :get, class: "btn btn-info btn-sm mr-2" %>
		<%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary btn-sm" %>
		<% else %>
		<%= button_to "Log in", new_user_session_path, method: :get, class: "btn btn-primary btn-sm" %>
		<%= button_to "Register", new_user_registration_path, method: :get, class: "btn btn-primary btn-sm" %>
		<% end %>
	  </div>
	</nav>
	<!--END-->


	<div class="container">

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	</div>
	<div class="row">
	  <div class="col"></div>
	  <%= yield %>
	  <div class="col"></div>
	</div>
  </body>
</html>
