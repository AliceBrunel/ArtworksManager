<%= form_for(:session, url: signin_path) do |f| %>

 <%= f.label :name %>
 <%= f.text_field :name %>
   <br>
 <%= f.label :surname %>
 <%= f.text_field :surname %>
   <br>
 <%= f.label :email %>
 <%= f.text_field :email %>
   <br>
 <%= f.label :address %>
 <%= f.text_field :address %>
   <br>
 <%= f.label :phone %>
 <%= f.text_field :phone %>
   <br>
 <%= f.label :job %>
 <%= f.text_field :job %>
   <br>
 <%= f.label :position %>
