<%= form_for @user do |f| %>
 <%= f.label :name %>
 <%= f.text_field :name %>
   <br>
 <%= f.label :surname %>
 <%= f.text_field :surname %>
   <br>
 <%= f.label :email %>
 <%= f.text_field :email %>
   <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
 <%= f.label :address %>
 <%= f.text_field :address %>
   <br>
 <%= f.label :phone %>
 <%= f.text_field :phone %>
   <br>
 <%= f.label :position %>
 <%= f.text_field :position %>

 <%= f.label :group %>
 <%= f.collection_select :group, Group.all, :name, :name %>

 <%= f.submit "Sign up!"%>
 <% end %>
