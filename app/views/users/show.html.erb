<div class="col">
  <div class="container">
        <div class="card border-light" style="max-width: 30rem;">
            <div class="card-header"><%= @user.name %> <%= @user.surname %></div>
            <div class="card-body">
              <h6 class="card-subtitle text-muted">User information</h6>
              <p class="card-text">
                <p><strong>Email :</strong> <%= @user.email %></p>
                <p><strong>Address :</strong> <%= @user.address %></p>
                <p><strong>Phone number :</strong> <%= @user.phone %></p>
                <p><strong>User type :</strong> <%= @user.group %></p>
                <p><strong>Occupation :</strong> <%= @user.position %></p>
              </p>
            </div>
        </div>
    <%= link_to "Manage or delete account", edit_user_registration_path %>
  </div>
  <div class="container">
        <br></br>
        <h2>
            <% if current_user == @user %>
          My arts
          <% else %>
          <%= @user.name.capitalize %>'s arts
            <% end %>
        </h2>

        <ul class="list-group">
          <% if @user.artworks.none %>
            <p>No artwork to display</p>
          <% else %>
            <% @user.artworks.each do |a| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= a.title %> by <%= a.artist %>
              </li>
              <% end %>
            <% end %>
        </ul>
          <% unless current_user != @user %>
            <%= link_to 'Add an art', new_artwork_url %>
          <% end %>
      </div>
</div>
