<div class="row">
  <div class="col"></div>
  <div class="col">
    <div class="container">
      <div class="card border-light" style="max-width: 30rem;">
          <div class="card-header"><%= @user.name %> <%= @user.surname %></div>
          <div class="card-body">
            <p class="card-text">
              <p><%= @user.email %></p>
              <p><%= @user.address %></p>
              <p><%= @user.phone %></p>
              <p><%= @user.group %></p>
              <p><%= @user.position %></p>
            </p>
          </div>
      </div>
    </div>
    <div class="container">
      <br></br>
      <h2>
          <% if current_user == @user %>
        My arts
        <% else %>
        <%= @user.name.capitalize %>'s arts
          <% end %>
      </h2>

      <ul class="list-group">
        <% if @user.artworks.none %>
          <p>No artwork to display</p>
        <% else %>
          <% @user.artworks.each do |a| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= a.title %> by <%= a.artist %>
            </li>
            <% end %>
          <% end %>
      </ul>
        <% unless current_user != @user %>
          <%= link_to 'Add an art', new_artwork_url %>
        <% end %>
    </div>
  </div>
  <div class="col"></div>