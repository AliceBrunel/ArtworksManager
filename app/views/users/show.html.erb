<ul>
    <li><%= @user.name %></li>
    <li><%= @user.surname %></li>
    <li><%= @user.email %></li>
    <li><%= @user.address %></li>
    <li><%= @user.phone %></li>
    <li><%= @user.group %></li>
    <li><%= @user.position %></li>
</ul>

<h2><% if current_user == @user %>
    My arts
    <% else %>
    <%= @user.name.capitalize %>'s arts
    <% end %></h2>

<ul>
    <% @user.artworks.each do |a| %>
    <li><%= a.title %></li>
    <% end %>
</ul>

<% unless current_user != @user %>
    <%= link_to 'Add an art', new_artwork_url %>
    <br>
    <%= link_to 'Log out', logout_path, method: "delete" %>
<% end %>